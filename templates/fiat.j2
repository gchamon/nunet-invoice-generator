{# Base invoice template for traditional fiat payment #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <style>
        {{ style_css }}
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="header">
            <h1>GABRIEL CHAMON ARAUJO<br>
                CONSULTORIA EM TECNOLOGIA DA<br>
                INFORMACAO LTDA</h1>
            <p>Treviso street 202, Bandeirantes, Minas Gerais, Brazil Post Code CEP 31340-320</p>
        </div>

        <div class="title">
            <h2>Invoice</h2>
        </div>
        <div class="flex-container">
            <div class="address">
                <p>UAB Tmanunet Technologies<br>
                   305951111<br>
                   V. Nageviciaus str. 3,<br>
                   08237 Vilnius<br>
                   Lithuania<br>
                   VAT ID: LT100015162112</p>
            </div>
        </div>

        <div class="flex-container">
            <div class="details">
                Date: {{ date }}
                <br>
                INV {{ '%04d'|format(invoice_number) }}
            </div>
        </div>

        <table>
            <tr>
                <th>Description</th>
                <th>Currency</th>
                <th>Quantity</th>
                <th>Price USD</th>
                <th>Amount USD</th>
                <th>Amount EUR</th>
            </tr>
            <tr>
                <td>REF.: DevOps Engineering<br>
                    Services provided for the period of:<br>
                   {{ invoice_from_date }} to {{ invoice_to_date }}</td>
                <td>FIAT</td>
                <td>1 month</td>
                <td>${{ '%.2f'|format(amount_usd) }}</td>
                <td>${{ '%.2f'|format(amount_usd) }}</td>
                <td>€{{ '%.2f'|format(amount_eur) }}</td>
            </tr>
            <trate>
                <tr>
                    <td colspan="4">
                        </th>
                    <td id="rate">Rate:</th>
                    <td id="usd-eur">{{ '%.4f'|format(usd_eur_rate) }} USD/EUR</td>
                </tr>
            </trate>
            <ttotal>
                <tr>
                    <th colspan="4"></th>
                    <th id="total" colspan="1">Total:</th>
                    <th>€{{ '%.2f'|format(amount_eur) }}</th>
                </tr>
            </ttotal>
        </table>

        <div class="disclaimer">
            <p>FIAT Amount Payable: From US Dollars to EUROS</p>
            <p id="declaration">I hereby declare that I understand I am responsible for my own taxes</p>
        </div>

        <div class="conversion">
            <div id="conversion-header">Currency conversion on {{ fiat_rate_date }} from:</div>
            <a href="https://data.ecb.europa.eu/currency-converter" id="fiat-conversion-url">https://data.ecb.europa.eu/currency-converter</a>
        </div>

        <div class="bank-details">
            <br>
            <p><strong>Bank Name: BANCO OURINVEST S.A</strong><br>
               Branch Address: 00001<br>
               Beneficiary's NAME: GABRIEL CHAMON ARAUJO CONSULTORIA EM TECNOLOGIA DA INFORMACAO LTDA<br>
               IBAN: BR3578632767000010025811899C1<br>
               SWIFT: OURIBRSPXXX</p>
        </div>
    </div>
</body>
</html>

